- load staticfiles
doctype html
html(lang="en", ng-app="phoneApp")
  head
    meta(charset="utf-8")
    link(href="{% static 'phonecat.css' %}", rel="stylesheet")
    script(src="{% static 'vendor.js' %}")
    script(src="{% static 'phonecat.js' %}")
  body.container-fluid
    nav.navbar.navbar-default
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-navbar-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") Smartphones
      .collapse.navbar-collapse#bs-navbar-collapse
        ul.nav.navbar-nav
          li: a(href="/") Home
          li: a(ui-sref="phone_list") List
    div(ui-view)
    div#partials(style="display:none;")
      script#phone-list-template(type="text/ng-template")
        include phonecat/partials/phone-list.template.jade
      script#phone-detail-template(type="text/ng-template")
        include phonecat/partials/phone-detail.template.jade
      script#phone-option-template(type="text/ng-template")
        include phonecat/partials/phone-option.template.jade
