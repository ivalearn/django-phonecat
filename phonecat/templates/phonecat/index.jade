- load staticfiles
- load compress
doctype html
html(lang="en", ng-app="phoneApp")
  head
    meta(charset="utf-8")
    - compress css
    link(href="{% static 'bootstrap/dist/css/bootstrap.css' %}", rel="stylesheet")
    link(href="{% static 'phonecat/phone-list.scss' %}", type="text/x-scss", rel="stylesheet")
    link(href="{% static 'phonecat/phone-detail.scss' %}", type="text/x-scss", rel="stylesheet")
    - endcompress
    - compress js
    script(src="{% static 'jquery/dist/jquery.js' %}")
    script(src="{% static 'bootstrap/dist/js/bootstrap.js' %}")
    script(src="{% static 'angular/angular.js' %}")
    script(src="{% static 'angular-resource/angular-resource.js' %}")
    script(src="{% static 'angular-animate/angular-animate.js' %}")
    script(src="{% static 'angular-ui-router/release/angular-ui-router.js' %}")
    script(src="{% static 'phonecat/phone-app.js' %}")
    script(src="{% static 'phonecat/phone-service.js' %}")
    script(src="{% static 'phonecat/phone-list.js' %}")
    script(src="{% static 'phonecat/phone-detail.js' %}")
    script(src="{% static 'phonecat/phone-option.js' %}")
    - endcompress
  body.container-fluid
    nav.navbar.navbar-default
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-navbar-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") Smartphones
      .collapse.navbar-collapse#bs-navbar-collapse
        ul.nav.navbar-nav
          li: a(href="/") Home
          li: a(ui-sref="phone_list") List
    div(ui-view)
    div#partials(style="display:none;")
      script#phone-list-template(type="text/ng-template")
        include phonecat/partials/phone-list.template.jade
      script#phone-detail-template(type="text/ng-template")
        include phonecat/partials/phone-detail.template.jade
      script#phone-option-template(type="text/ng-template")
        include phonecat/partials/phone-option.template.jade
    if debug
      script document.write('<script src="//' + location.host.split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')
